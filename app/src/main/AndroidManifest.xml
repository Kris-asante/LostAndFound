<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.krisperezcyrus.lostfound">
<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.hardware.camera2.full"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/lbf1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ToastActivity" />
        <activity
            android:name=".Ankasa"
            android:label="@string/title_activity_ankasa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ILostActivity" />
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".Ankasa" />

        <activity android:name=".IFoundActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Ankasa" />
        </activity>
        <activity
            android:name=".HomeLostActivity"
            android:label="@string/title_activity_home_lost"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeLostActivity" />
        </activity>
        <activity
            android:name=".HomeFoundActivity"
            android:label="@string/title_activity_home_found"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeFoundActivity" />
        </activity>
    </application>

</manifest>