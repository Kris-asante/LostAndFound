<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@drawable/wallpaper3" >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fitsSystemWindows="false">
        <!-- android:background="@color/buttnclrs4home"-->

        <Button
            android:id="@+id/homelostbtn"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/buttnclrs4home"
            android:text="@string/lost_items"
            android:textAlignment="center"
            android:textColor="@color/likeWhite" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/homelostbtn"
            android:background="#4e5581" />


        <Button
            android:id="@+id/homefoundbtn"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/buttnclrs4home"
            android:text="@string/found_items"
            android:textAlignment="center"
            android:textColor="@color/likeWhite"
            android:visibility="visible" />


        <ImageView
            android:layout_width="130dp"
            android:layout_height="5dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/homefoundbtn"
            android:background="#FF4E5581" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.TabLayout

            android:id="@+id/tab_indicators"
            android:layout_width="61dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tabBackground="@drawable/indicator_selector">

        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/screen_viewpagers"
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/faqcolor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/screen_viewpagers"
            android:text="Swipe for tips"
            android:textColor="#ffffff"
            android:textSize="8dp" />


    </RelativeLayout>




</FrameLayout>